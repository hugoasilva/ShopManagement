<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import com.jfoenix.controls.JFXButton?>
<?import org.kordamp.ikonli.javafx.FontIcon?>
<VBox xmlns:fx="http://javafx.com/fxml/1" prefHeight="445.0" prefWidth="200.0" stylesheets="@../../../css/styles.css"
      xmlns="http://javafx.com/javafx/8.0.141" fx:controller="main.java.pt.shop.management.ui.main.toolbar.ToolbarController">
    <JFXButton contentDisplay="TOP" layoutX="10.0" layoutY="10.0" mnemonicParsing="false"
               onAction="#loadAddCustomer" prefHeight="400.0" prefWidth="200.0" styleClass="toolbar-button"
               text="Adicionar Cliente" textAlignment="CENTER">
        <graphic>
            <FontIcon iconLiteral="icm-user" iconSize="40" styleClass="font-icon"/>
        </graphic>
    </JFXButton>
    <JFXButton contentDisplay="TOP" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#loadAddInvoice"
               prefHeight="400.0" prefWidth="200.0" styleClass="toolbar-button" text="Adicionar Fatura"
               textAlignment="CENTER">
        <graphic>
            <FontIcon iconLiteral="icm-file-text2" iconSize="40" styleClass="font-icon"/>
        </graphic>
    </JFXButton>
    <JFXButton contentDisplay="TOP" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#loadAddEmployee"
               prefHeight="400.0" prefWidth="200.0" styleClass="toolbar-button" text="Adicionar Empregado"
               textAlignment="CENTER">
        <graphic>
            <FontIcon iconLiteral="icm-user-tie" iconSize="40" styleClass="font-icon"/>
        </graphic>
    </JFXButton>
    <JFXButton contentDisplay="TOP" layoutX="10.0" layoutY="10.0" mnemonicParsing="false"
               onAction="#loadCustomerTable" prefHeight="400.0" prefWidth="200.0" styleClass="toolbar-button"
               text="Lista de Clientes" textAlignment="CENTER">
        <graphic>
            <FontIcon iconLiteral="icm-users" iconSize="40" styleClass="font-icon"/>
        </graphic>
    </JFXButton>
    <JFXButton contentDisplay="TOP" layoutX="10.0" layoutY="81.0" mnemonicParsing="false"
               onAction="#loadInvoiceTable" prefHeight="400.0" prefWidth="200.0"
               styleClass="toolbar-button" text="Lista de Faturas" textAlignment="CENTER">
        <graphic>
            <FontIcon iconLiteral="icm-files-empty" iconSize="40" styleClass="font-icon"/>
        </graphic>
    </JFXButton>
    <JFXButton contentDisplay="TOP" layoutX="10.0" layoutY="81.0" mnemonicParsing="false"
               onAction="#loadEmployeeTable" prefHeight="400.0" prefWidth="200.0"
               styleClass="toolbar-button" text="Lista de Empregados" textAlignment="CENTER">
        <graphic>
            <FontIcon iconLiteral="ion-ios-people" iconSize="60" styleClass="font-icon"/>
        </graphic>
    </JFXButton>
</VBox>