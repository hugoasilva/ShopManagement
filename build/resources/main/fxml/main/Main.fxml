<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import org.kordamp.ikonli.javafx.FontIcon?>
<StackPane xmlns:fx="http://javafx.com/fxml/1" fx:id="rootPane" maxHeight="-Infinity" maxWidth="-Infinity"
           minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="1000.0"
           styleClass="custom-pane" stylesheets="@../../css/styles.css"
           xmlns="http://javafx.com/javafx/8.0.141" fx:controller="pt.shop.management.ui.main.MainController">
    <JFXDrawer fx:id="drawer" defaultDrawerSize="200.0" resizableOnDrag="true"
               resizeContent="true" styleClass="jfx-drawer"/>
    <AnchorPane fx:id="rootAnchorPane" prefHeight="200.0" prefWidth="200.0">
        <AnchorPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                    AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="25.0">
            <JFXTabPane fx:id="mainTabPane" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                        AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                <Tab closable="false" styleClass="tab-main" text="Pesquisa de Clientes">
                    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                        <VBox prefHeight="412.0" prefWidth="557.0" AnchorPane.bottomAnchor="0.0"
                              AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="1000.0">
                                <VBox.margin>
                                    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
                                </VBox.margin>
                                <FontIcon iconLiteral="icm-search" iconSize="60" styleClass="font-icon"/>
                                <HBox alignment="CENTER" spacing="50.0" styleClass="searcHBox">
                                    <HBox.margin>
                                        <Insets bottom="20.0" left="20.0" right="20.0" top="200.0"/>
                                    </HBox.margin>
                                    <JFXComboBox fx:id="customerCombo" styleClass="searchCombo" labelFloat="true"
                                                 prefHeight="26.0" prefWidth="230.0" promptText="Tipo de Pesquisa:"/>
                                    <JFXTextField fx:id="customerSearchInput" styleClass="searchInput" labelFloat="true"
                                                  prefWidth="500.0" promptText="Pesquisar..."/>
                                </HBox>
                            </VBox>
                            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                                <JFXButton onAction="#handleSearchCustomerButtonPress" prefHeight="44.0"
                                           prefWidth="151.0"
                                           onKeyPressed="#handleSearchCustomerKeyPress" text="Pesquisar">
                                </JFXButton>
                            </HBox>
                        </VBox>
                    </AnchorPane>
                </Tab>
                <Tab closable="false" styleClass="tab-main" text="Pesquisa de Empregados">
                    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                        <VBox prefHeight="412.0" prefWidth="557.0" AnchorPane.bottomAnchor="0.0"
                              AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="1000.0">
                                <VBox.margin>
                                    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
                                </VBox.margin>
                                <!--                                <FontAwesomeIconView glyphName="BLACK_TIE" size="50"/>-->
                                <HBox alignment="CENTER" spacing="50.0" styleClass="searcHBox">
                                    <HBox.margin>
                                        <Insets bottom="20.0" left="20.0" right="20.0" top="100.0"/>
                                    </HBox.margin>
                                    <JFXComboBox fx:id="employeeCombo" styleClass="searchCombo" labelFloat="true"
                                                 prefHeight="26.0" prefWidth="230.0" promptText="Tipo de Pesquisa:"/>
                                    <JFXTextField fx:id="employeeSearchInput" styleClass="searchInput" labelFloat="true"
                                                  prefWidth="500.0" promptText="Pesquisar..."/>
                                </HBox>
                            </VBox>
                            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                                <JFXButton onAction="#handleSearchEmployeeButtonPress" prefHeight="44.0"
                                           prefWidth="151.0"
                                           onKeyPressed="#handleSearchEmployeeKeyPress" text="Pesquisar">
                                </JFXButton>
                            </HBox>
                        </VBox>
                    </AnchorPane>
                </Tab>
                <Tab closable="false" styleClass="tab-main" text="Pesquisa de Faturas">
                    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                        <VBox prefHeight="412.0" prefWidth="557.0" AnchorPane.bottomAnchor="0.0"
                              AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="1000.0">
                                <VBox.margin>
                                    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
                                </VBox.margin>
                                <!--                                <FontAwesomeIconView glyphName="FILES_ALT" size="50"/>-->
                                <HBox alignment="CENTER" spacing="50.0" styleClass="searcHBox">
                                    <HBox.margin>
                                        <Insets bottom="20.0" left="20.0" right="20.0" top="100.0"/>
                                    </HBox.margin>
                                    <JFXComboBox fx:id="invoiceCombo" styleClass="searchCombo" labelFloat="true"
                                                 prefHeight="26.0" prefWidth="230.0" promptText="Tipo de Pesquisa:"/>
                                    <JFXTextField fx:id="invoiceSearchInput" styleClass="searchInput" labelFloat="true"
                                                  prefWidth="500.0" promptText="Pesquisar..."/>
                                </HBox>
                            </VBox>
                            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                                <JFXButton onAction="#handleSearchInvoiceButtonPress" prefHeight="44.0"
                                           prefWidth="151.0"
                                           onKeyPressed="#handleSearchInvoiceKeyPress" text="Pesquisar">
                                </JFXButton>
                            </HBox>
                        </VBox>
                    </AnchorPane>
                </Tab>
                <Tab closable="false" styleClass="tab-main" text="Pesquisa de Produtos">
                    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                        <VBox prefHeight="412.0" prefWidth="557.0" AnchorPane.bottomAnchor="0.0"
                              AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="1000.0">
                                <VBox.margin>
                                    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
                                </VBox.margin>
                                <!--                                <FontAwesomeIconView glyphName="USERS" size="50"/>-->
                                <HBox alignment="CENTER" spacing="50.0" styleClass="searcHBox">
                                    <HBox.margin>
                                        <Insets bottom="20.0" left="20.0" right="20.0" top="200.0"/>
                                    </HBox.margin>
                                    <JFXComboBox fx:id="productCombo" styleClass="searchCombo" labelFloat="true"
                                                 prefHeight="26.0" prefWidth="230.0" promptText="Tipo de Pesquisa:"/>
                                    <JFXTextField fx:id="productSearchInput" styleClass="searchInput" labelFloat="true"
                                                  prefWidth="500.0" promptText="Pesquisar..."/>
                                </HBox>
                            </VBox>
                            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                                <JFXButton onAction="#handleSearchProductButtonPress" prefHeight="44.0"
                                           prefWidth="151.0"
                                           onKeyPressed="#handleSearchProductKeyPress" text="Pesquisar">
                                </JFXButton>
                            </HBox>
                        </VBox>
                    </AnchorPane>
                </Tab>
            </JFXTabPane>
            <JFXHamburger fx:id="hamburger" styleClass="jfx-hamburger-icon" AnchorPane.rightAnchor="950.0"
                          AnchorPane.topAnchor="100.0"/>
        </AnchorPane>
        <MenuBar AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <Menu mnemonicParsing="false" text="Ficheiro">
                <MenuItem mnemonicParsing="false" onAction="#handleMenuClose" text="Sair"/>
            </Menu>
            <Menu mnemonicParsing="false" text="Adicionar">
                <MenuItem mnemonicParsing="false" onAction="#handleMenuAddInvoice" text="Adicionar Fatura"/>
                <MenuItem mnemonicParsing="false" onAction="#handleMenuAddCustomer" text="Adicionar Cliente"/>
            </Menu>
            <Menu mnemonicParsing="false" text="Ver">
                <MenuItem mnemonicParsing="false" onAction="#handleMenuViewInvoiceList" text="Lista de Faturas"/>
                <MenuItem mnemonicParsing="false" onAction="#handleMenuViewCustomerList"
                          text="Lista de Clientes"/>
                <MenuItem mnemonicParsing="false" onAction="#handleMenuFullScreen" text="Full Screen"/>
            </Menu>
            <Menu mnemonicParsing="false" text="Ajuda">
                <MenuItem mnemonicParsing="false" onAction="#handleAboutMenu" text="Sobre"/>
            </Menu>
        </MenuBar>
    </AnchorPane>
</StackPane>
