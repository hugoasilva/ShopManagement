<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import org.kordamp.ikonli.javafx.FontIcon?>
<?import java.lang.String?>
<StackPane xmlns:fx="http://javafx.com/fxml/1" fx:id="mainContainer" maxHeight="-Infinity" maxWidth="-Infinity"
           minHeight="-Infinity"
           minWidth="-Infinity" prefHeight="650.0" prefWidth="1200.0"
           stylesheets="@../../css/styles.css" xmlns="http://javafx.com/javafx/11.0.1"
           fx:controller="pt.shop.management.ui.controller.invoice.InvoiceSearchController">
    <HBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
          nodeOrientation="RIGHT_TO_LEFT" prefHeight="200.0" prefWidth="350.0" styleClass="main-back">
        <StackPane.margin>
            <Insets bottom="530.0"/>
        </StackPane.margin>
    </HBox>
    <FontIcon iconLiteral="zondi-search" iconSize="80" styleClass="font-icon">
        <StackPane.margin>
            <Insets bottom="630.0"/>
        </StackPane.margin>
    </FontIcon>
    <AnchorPane id="AnchorPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" prefHeight="200.0"
                styleClass="custom-pane" stylesheets="@../../css/styles.css">
        <VBox maxHeight="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="300.0" prefWidth="600.0"
              AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
              AnchorPane.topAnchor="0.0">
            <VBox.margin>
                <Insets bottom="20.0" left="180.0" top="40.0"/>
            </VBox.margin>
            <HBox alignment="CENTER" minHeight="-Infinity" prefHeight="10.0" prefWidth="788.0" spacing="20.0"
                  styleClass="searcHBox">
                <HBox.margin>
                    <Insets bottom="20.0" left="20.0" right="20.0" top="200.0"/>
                </HBox.margin>
                <JFXComboBox fx:id="invoiceCombo" labelFloat="true" prefHeight="26.0" prefWidth="230.0"
                             promptText="Tipo de Pesquisa:" styleClass="searchCombo">
                    <HBox.margin>
                        <Insets left="40.0"/>
                    </HBox.margin>
                </JFXComboBox>
                <JFXTextField fx:id="invoiceSearchInput" labelFloat="true" prefWidth="400.0" promptText="Pesquisar..."
                              styleClass="searchInput">
                    <HBox.margin>
                        <Insets right="40.0"/>
                    </HBox.margin>
                </JFXTextField>
                <VBox.margin>
                    <Insets top="15.0"/>
                </VBox.margin>
                <padding>
                    <Insets top="15.0"/>
                </padding>
            </HBox>
            <HBox alignment="CENTER" minHeight="-Infinity" prefHeight="10.0" prefWidth="788.0" spacing="20.0"
                  styleClass="searcHBox">
                <JFXDatePicker fx:id="initDate" defaultColor="#ffff8d" maxWidth="500.0" minWidth="-Infinity"
                               prefWidth="255.0" promptText="Data inicial:"
                               style="-fx-control-inner-background: derive(#2A2E37, 10%)">
                    <VBox.margin>
                        <Insets left="10.0" right="10.0" top="20.0"/>
                    </VBox.margin>
                    <HBox.margin>
                        <Insets left="10.0"/>
                    </HBox.margin>
                </JFXDatePicker>
                <JFXDatePicker fx:id="finalDate" defaultColor="#ffff8d" maxWidth="400.0" minWidth="-Infinity"
                               prefWidth="255.0" promptText="Data final:"
                               style="-fx-control-inner-background: derive(#2A2E37, 10%)">
                    <VBox.margin>
                        <Insets left="10.0" right="10.0" top="20.0"/>
                    </VBox.margin>
                </JFXDatePicker>
                <VBox.margin>
                    <Insets bottom="5.0" top="50.0"/>
                </VBox.margin>
            </HBox>
            <JFXButton alignment="CENTER" contentDisplay="CENTER" onAction="#handleSearchInvoiceButtonPress"
                       onKeyPressed="#handleSearchInvoiceKeyPress" prefHeight="44.0" prefWidth="151.0">
                <graphic>
                    <FontIcon iconLiteral="gmi-search" iconSize="35" styleClass="font-icon-button"/>
                </graphic>
                <VBox.margin>
                    <Insets left="210.0" top="48.0"/>
                </VBox.margin>
            </JFXButton>
        </VBox>
        <StackPane.margin>
            <Insets bottom="390.0" top="60.0"/>
        </StackPane.margin>
    </AnchorPane>
    <TableView fx:id="tableView" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
               prefHeight="315.0" prefWidth="800.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
               AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="30.0">
        <columns>
            <TableColumn fx:id="idCol" maxWidth="120.0" prefWidth="50.0" text="ID"/>
            <TableColumn fx:id="customerCol" prefWidth="175.0" text="Cliente"/>
            <TableColumn fx:id="employeeCol" prefWidth="175.0" text="Empregado"/>
            <TableColumn fx:id="dateCol" prefWidth="100.0" text="Data"/>
            <TableColumn fx:id="productsCol" prefWidth="90.0" text="Produtos"/>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="UNCONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
        <contextMenu>
            <ContextMenu>
                <items>
                    <MenuItem mnemonicParsing="false" onAction="#handleRefresh" text="Atualizar"/>
                    <MenuItem mnemonicParsing="false" onAction="#handleInvoiceEdit" text="Editar"/>
                    <MenuItem mnemonicParsing="false" onAction="#handleInvoiceDelete" text="Apagar"/>
                </items>
                <styleClass>
                    <String fx:value="table-context"/>
                    <String fx:value="colored-context-menu"/>
                </styleClass>
            </ContextMenu>
        </contextMenu>
        <VBox.margin>
            <Insets left="45.0" right="50.0"/>
        </VBox.margin>
        <StackPane.margin>
            <Insets top="210.0"/>
        </StackPane.margin>
    </TableView>
    <padding>
        <Insets bottom="10.0"/>
    </padding>
    <StackPane.margin>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </StackPane.margin>
    <padding>
        <Insets top="100.0"/>
    </padding>
</StackPane>
