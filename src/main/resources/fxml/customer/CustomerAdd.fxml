<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.layout.*?>
<?import org.kordamp.ikonli.javafx.FontIcon?>
<StackPane xmlns:fx="http://javafx.com/fxml/1" fx:id="rootPane" stylesheets="@../../css/styles.css"
           xmlns="http://javafx.com/javafx/11.0.1"
           fx:controller="pt.shop.management.ui.customer.controller.CustomerAddController">
    <AnchorPane id="AnchorPane" fx:id="mainContainer" prefHeight="600.0" prefWidth="1200.0" styleClass="custom-pane"
                stylesheets="@../../css/styles.css">
        <VBox prefHeight="200.0" prefWidth="1000.0" spacing="10.0" styleClass="detailsVBox"
              AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="250.0" AnchorPane.rightAnchor="250.0"
              AnchorPane.topAnchor="20.0">
            <padding>
                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
            </padding>
            <FontIcon iconLiteral="zondi-user-solid-square" iconSize="80" styleClass="font-icon">
                <VBox.margin>
                    <Insets left="300.0"/>
                </VBox.margin>
            </FontIcon>
            <JFXTextField fx:id="name" labelFloat="true" layoutX="20.0" layoutY="30.0" promptText="Nome:">
                <VBox.margin>
                    <Insets left="10.0" right="10.0" top="20.0"/>
                </VBox.margin>
            </JFXTextField>
            <JFXTextField fx:id="address" labelFloat="true" layoutX="20.0" layoutY="30.0" promptText="Morada:">
                <VBox.margin>
                    <Insets left="10.0" right="10.0" top="20.0"/>
                </VBox.margin>
            </JFXTextField>
            <JFXTextField fx:id="phone" labelFloat="true" layoutX="10.0" layoutY="62.0" promptText="Contacto:">
                <VBox.margin>
                    <Insets left="10.0" right="10.0" top="20.0"/>
                </VBox.margin>
            </JFXTextField>
            <JFXTextField fx:id="email" labelFloat="true" layoutX="10.0" layoutY="62.0" promptText="Email:">
                <VBox.margin>
                    <Insets left="10.0" right="10.0" top="20.0"/>
                </VBox.margin>
            </JFXTextField>
            <JFXTextField fx:id="nif" labelFloat="true" layoutX="10.0" layoutY="62.0" promptText="NIF:">
                <VBox.margin>
                    <Insets left="10.0" right="10.0" top="20.0"/>
                </VBox.margin>
            </JFXTextField>
            <HBox alignment="CENTER" prefHeight="47.0" prefWidth="404.0" spacing="30.0">
                <VBox.margin>
                    <Insets top="20.0"/>
                </VBox.margin>
                <JFXButton onAction="#addCustomer" prefHeight="66.0" prefWidth="100.0" text="Guardar"/>
                <JFXButton layoutX="10.0" layoutY="10.0" onAction="#cancel" prefHeight="66.0" prefWidth="100.0"
                           text="Cancelar"/>
            </HBox>
        </VBox>
    </AnchorPane>
    <StackPane.margin>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </StackPane.margin>
</StackPane>
