<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXComboBox?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import org.kordamp.ikonli.javafx.FontIcon?>
<?import java.lang.String?>
<StackPane xmlns:fx="http://javafx.com/fxml/1" stylesheets="@../../css/styles.css"
           xmlns="http://javafx.com/javafx/11.0.1"
           fx:controller="pt.shop.management.ui.search.invoice.InvoiceSearchController">
    <AnchorPane id="AnchorPane" prefHeight="600.0" prefWidth="1200.0" stylesheets="@../../css/styles.css">
        <VBox prefHeight="1000.0" prefWidth="557.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
              AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="1000.0" styleClass="detailsVBox">
                <VBox.margin>
                    <Insets bottom="20.0" left="180.0" right="180.0" top="30.0"/>
                </VBox.margin>
                <FontIcon iconLiteral="icm-search" iconSize="80" styleClass="font-icon">
                    <VBox.margin>
                        <Insets top="20.0"/>
                    </VBox.margin>
                </FontIcon>
                <HBox alignment="CENTER" minHeight="-Infinity" prefHeight="10.0" prefWidth="788.0" spacing="20.0"
                      styleClass="searcHBox">
                    <HBox.margin>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="200.0"/>
                    </HBox.margin>
                    <JFXComboBox fx:id="invoiceCombo" labelFloat="true" prefHeight="26.0" prefWidth="230.0"
                                 promptText="Tipo de Pesquisa:" styleClass="searchCombo">
                        <HBox.margin>
                            <Insets left="40.0"/>
                        </HBox.margin>
                    </JFXComboBox>
                    <JFXTextField fx:id="invoiceSearchInput" labelFloat="true" prefWidth="500.0"
                                  promptText="Pesquisar..." styleClass="searchInput">
                        <HBox.margin>
                            <Insets right="40.0"/>
                        </HBox.margin>
                    </JFXTextField>
                </HBox>
                <JFXButton onAction="#handleSearchInvoiceButtonPress" onKeyPressed="#handleSearchInvoiceKeyPress"
                           prefHeight="44.0" prefWidth="151.0" text="Pesquisar">
                    <VBox.margin>
                        <Insets bottom="10.0" top="50.0"/>
                    </VBox.margin>
                </JFXButton>
            </VBox>
            <TableView fx:id="tableView" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
                       minWidth="-Infinity" prefHeight="300.0" prefWidth="840.0" AnchorPane.bottomAnchor="0.0"
                       AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="30.0">
                <columns>
                    <TableColumn fx:id="idCol" maxWidth="120.0" prefWidth="50.0" text="ID"/>
                    <TableColumn fx:id="customerCol" prefWidth="175.0" text="Cliente"/>
                    <TableColumn fx:id="employeeCol" prefWidth="175.0" text="Empregado"/>
                    <TableColumn fx:id="dateCol" prefWidth="100.0" text="Data"/>
                    <TableColumn fx:id="productsCol" prefWidth="90.0" text="Produtos"/>
                </columns>
                <columnResizePolicy>
                </columnResizePolicy>
                <contextMenu>
                    <ContextMenu>
                        <items>
                            <MenuItem mnemonicParsing="false" onAction="#handleRefresh" text="Atualizar"/>
                            <MenuItem mnemonicParsing="false" onAction="#handleInvoiceEdit" text="Editar"/>
                            <MenuItem mnemonicParsing="false" onAction="#handleInvoiceDelete" text="Apagar"/>
                        </items>
                        <styleClass>
                            <String fx:value="table-context"/>
                            <String fx:value="colored-context-menu"/>
                        </styleClass>
                    </ContextMenu>
                </contextMenu>
                <VBox.margin>
                    <Insets bottom="20.0" left="180.0" right="180.0"/>
                </VBox.margin>
            </TableView>
        </VBox>
    </AnchorPane>
</StackPane>
