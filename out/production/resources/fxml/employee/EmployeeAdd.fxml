<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.layout.*?>
<?import com.jfoenix.controls.JFXTextField?>
<?import com.jfoenix.controls.JFXButton?>
<?import org.kordamp.ikonli.javafx.FontIcon?>
<StackPane xmlns:fx="http://javafx.com/fxml/1" fx:id="rootPane" stylesheets="@../../css/styles.css"
           xmlns="http://javafx.com/javafx/8.0.141"
           fx:controller="main.java.shop.management.ui.add.employee.EmployeeAddController">
    <AnchorPane id="AnchorPane" fx:id="mainContainer" prefHeight="376.0" prefWidth="490.0" styleClass="custom-pane"
                stylesheets="@../../css/styles.css">
        <VBox prefHeight="153.0" prefWidth="404.0" spacing="10.0" styleClass="detailsVBox"
              AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="45.0" AnchorPane.rightAnchor="45.0"
              AnchorPane.topAnchor="100.0">
            <padding>
                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
            </padding>
            <JFXTextField fx:id="name" labelFloat="true" layoutX="20.0" layoutY="30.0" promptText="Nome:">
                <VBox.margin>
                    <Insets left="10.0" right="10.0" top="20.0"/>
                </VBox.margin>
            </JFXTextField>
            <JFXTextField fx:id="address" labelFloat="true" layoutX="20.0" layoutY="30.0" promptText="Morada:">
                <VBox.margin>
                    <Insets left="10.0" right="10.0" top="20.0"/>
                </VBox.margin>
            </JFXTextField>
            <JFXTextField fx:id="phone" labelFloat="true" layoutX="10.0" layoutY="62.0" promptText="Contacto:">
                <VBox.margin>
                    <Insets left="10.0" right="10.0" top="20.0"/>
                </VBox.margin>
            </JFXTextField>
            <JFXTextField fx:id="email" labelFloat="true" layoutX="10.0" layoutY="62.0" promptText="Email:">
                <VBox.margin>
                    <Insets left="10.0" right="10.0" top="20.0"/>
                </VBox.margin>
            </JFXTextField>
            <JFXTextField fx:id="nif" labelFloat="true" layoutX="10.0" layoutY="62.0" promptText="NIF:">
                <VBox.margin>
                    <Insets left="10.0" right="10.0" top="20.0"/>
                </VBox.margin>
            </JFXTextField>
            <HBox alignment="CENTER" prefHeight="47.0" prefWidth="404.0" spacing="30.0">
                <VBox.margin>
                    <Insets top="20.0"/>
                </VBox.margin>
                <JFXButton onAction="#addEmployee" prefHeight="66.0" prefWidth="100.0" text="Guardar"/>
                <JFXButton layoutX="10.0" layoutY="10.0" onAction="#cancel" prefHeight="66.0" prefWidth="100.0"
                           text="Cancelar"/>
            </HBox>
        </VBox>
        <FontIcon iconLiteral="icm-user-tie" iconSize="60" layoutX="220.0" layoutY="80.0" styleClass="font-icon"/>
    </AnchorPane>
</StackPane>
