<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXPasswordField?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import org.kordamp.ikonli.javafx.FontIcon?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" id="AnchorPane" prefHeight="367.0" prefWidth="419.0"
            stylesheets="@../../css/styles.css" xmlns="http://javafx.com/javafx/11.0.1"
            fx:controller="shop.management.ui.login.LoginController">
    <FontIcon iconLiteral="fa-address-book" iconSize="35" layoutX="70.0" layoutY="175.0" styleClass="font-icon"/>
    <FontIcon iconLiteral="fa-key" iconSize="35" layoutX="70.0" layoutY="240.0" styleClass="font-icon"/>
    <FontIcon iconLiteral="fa-lock" iconSize="63" layoutX="186.0" layoutY="87.0" styleClass="font-icon"
              AnchorPane.topAnchor="20.0"/>
    <VBox prefHeight="256.0" prefWidth="404.0" spacing="10.0" styleClass="detailsVBox" AnchorPane.bottomAnchor="20.0"
          AnchorPane.leftAnchor="45.0" AnchorPane.rightAnchor="45.0" AnchorPane.topAnchor="100.0">
        <JFXTextField fx:id="username" labelFloat="true" layoutX="95.0" layoutY="122.0" prefHeight="33.0"
                      prefWidth="259.0" promptText="Nome de utilizador:" styleClass="loginField">
            <font>
                <Font size="20.0"/>
            </font>
            <VBox.margin>
                <Insets bottom="10.0" left="45.0" right="45.0" top="45.0"/>
            </VBox.margin>
        </JFXTextField>
        <JFXPasswordField fx:id="password" labelFloat="true" layoutX="97.0" layoutY="194.0"
                          onAction="#handleLoginButtonAction" prefHeight="34.0" prefWidth="259.0"
                          promptText="Palavra-passe:" styleClass="loginField">
            <font>
                <Font size="20.0"/>
            </font>
            <VBox.margin>
                <Insets left="45.0" right="45.0" top="10.0"/>
            </VBox.margin>
        </JFXPasswordField>
        <HBox alignment="CENTER" prefHeight="40.0" prefWidth="404.0" spacing="30.0">
            <JFXButton layoutX="106.0" layoutY="278.0" onAction="#handleLoginButtonAction" prefHeight="40.0"
                       prefWidth="90.0" styleClass="login-button" text="Entrar"/>
            <JFXButton layoutX="239.0" layoutY="278.0" onAction="#handleCancelButtonAction" prefHeight="40.0"
                       prefWidth="90.0" styleClass="login-button" text="Fechar"/>
            <VBox.margin>
                <Insets top="30.0"/>
            </VBox.margin>
        </HBox>
    </VBox>
</AnchorPane>
