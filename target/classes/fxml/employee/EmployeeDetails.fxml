<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<StackPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="400.0" prefWidth="600.0"
           xmlns="http://javafx.com/javafx/8.0.141">
    <AnchorPane id="AnchorPane" prefHeight="1000.0" prefWidth="490.0" styleClass="custom-pane"
                stylesheets="@../../css/styles.css">
        <VBox minWidth="-Infinity" prefHeight="153.0" prefWidth="800.0" spacing="10.0" AnchorPane.bottomAnchor="0.0"
              AnchorPane.leftAnchor="15.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <padding>
                <Insets bottom="40.0" left="15.0" right="15.0" top="70.0"/>
            </padding>
            <VBox styleClass="detailsVBox">
                <Label fx:id="name" layoutX="150.0" layoutY="250.0" minHeight="40" minWidth="69"
                       styleClass="customerLabel">
                    <VBox.margin>
                        <Insets left="20.0"/>
                    </VBox.margin>
                </Label>
                <Label fx:id="id" layoutX="150.0" layoutY="150.0" minHeight="40" minWidth="69"
                       styleClass="customerLabel">
                    <VBox.margin>
                        <Insets left="20.0"/>
                    </VBox.margin>
                </Label>
                <Label fx:id="address" layoutX="150.0" layoutY="350.0" minHeight="40" minWidth="69"
                       styleClass="customerLabel">
                    <VBox.margin>
                        <Insets left="20.0"/>
                    </VBox.margin>
                </Label>
                <Label fx:id="phone" layoutX="150.0" layoutY="450.0" minHeight="40" minWidth="69"
                       styleClass="customerLabel">
                    <VBox.margin>
                        <Insets left="20.0"/>
                    </VBox.margin>
                </Label>
                <Label fx:id="email" layoutX="150.0" layoutY="550.0" minHeight="40" minWidth="69"
                       styleClass="customerLabel">
                    <VBox.margin>
                        <Insets left="20.0"/>
                    </VBox.margin>
                </Label>
                <Label fx:id="nif" layoutX="150.0" layoutY="650.0" minHeight="40" minWidth="69"
                       styleClass="customerLabel">
                    <VBox.margin>
                        <Insets left="20.0"/>
                    </VBox.margin>
                </Label>
                <Label fx:id="notes" layoutX="150.0" layoutY="750.0" minHeight="40" minWidth="69"
                       styleClass="customerLabel">
                    <VBox.margin>
                        <Insets left="20.0"/>
                    </VBox.margin>
                </Label>
                <VBox.margin>
                    <Insets bottom="20.0" left="175.0" right="175.0" top="50.0"/>
                </VBox.margin>
            </VBox>
            <TableView fx:id="tableView" prefHeight="400.0" prefWidth="1000.0" AnchorPane.bottomAnchor="0.0"
                       AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="30.0">
                <columns>
                    <TableColumn fx:id="idCol" maxWidth="120.0" prefWidth="75.0" text="ID"/>
                    <TableColumn fx:id="nameCol" minWidth="325.0" prefWidth="150.0" text="Descrição"/>
                    <TableColumn fx:id="addressCol" prefWidth="150.0" text="Data"/>
                </columns>
                <contextMenu>
                    <ContextMenu>
                        <items>
                            <!--                            <MenuItem mnemonicParsing="false" onAction="#handleRefresh" text="Atualizar"/>-->
                            <!--                            <MenuItem mnemonicParsing="false" onAction="#handleCustomerEdit" text="Editar"/>-->
                            <!--                            <MenuItem mnemonicParsing="false" onAction="#handleCustomerDelete" text="Apagar"/>-->
                        </items>
                    </ContextMenu>
                </contextMenu>
                <VBox.margin>
                    <Insets right="15.0"/>
                </VBox.margin>
            </TableView>
        </VBox>
        <!--        <FontAwesomeIconView glyphName="USER_CIRCLE" layoutX="370.0" layoutY="80.0" size="60"/>-->
    </AnchorPane>
</StackPane>
