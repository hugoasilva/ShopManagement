<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.lang.String?>
<StackPane xmlns:fx="http://javafx.com/fxml/1" fx:id="rootPane"
           stylesheets="@../../css/styles.css" xmlns="http://javafx.com/javafx/8.0.141"
           fx:controller="shop.management.ui.list.invoice.InvoiceListController">
    <AnchorPane id="AnchorPane" fx:id="contentPane" prefHeight="525.0" prefWidth="798.0"
                stylesheets="@../../css/styles.css">
        <TableView fx:id="tableView" layoutX="14.0" layoutY="14.0" prefHeight="400.0" prefWidth="853.0"
                   AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                   AnchorPane.topAnchor="30.0">
            <columns>
                <TableColumn fx:id="idCol" maxWidth="120.0" prefWidth="75.0" text="ID"/>
                <TableColumn fx:id="customerCol" prefWidth="150.0" text="Cliente"/>
                <TableColumn fx:id="employeeCol" prefWidth="150.0" text="Empregado"/>
                <TableColumn fx:id="dateCol" prefWidth="120.0" text="Data"/>
                <TableColumn fx:id="productsCol" prefWidth="100.0" text="Produtos"/>
            </columns>
            <columnResizePolicy>
            </columnResizePolicy>
            <contextMenu>
                <ContextMenu>
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#handleRefresh" text="Atualizar"/>
                        <MenuItem mnemonicParsing="false" onAction="#handleInvoiceEdit" text="Editar"/>
                        <MenuItem mnemonicParsing="false" onAction="#handleInvoiceDelete" text="Apagar"/>
                    </items>
                    <styleClass>
                        <String fx:value="table-context"/>
                        <String fx:value="colored-context-menu"/>
                    </styleClass>
                </ContextMenu>
            </contextMenu>
        </TableView>
        <MenuBar layoutX="10.0" layoutY="10.0" prefHeight="32.0" prefWidth="722.0" AnchorPane.leftAnchor="0.0"
                 AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <Menu mnemonicParsing="false" text="File">
                <items>
                    <MenuItem mnemonicParsing="false" onAction="#exportAsPDF" text="Exportar para PDF"/>
                    <MenuItem mnemonicParsing="false" onAction="#closeStage" text="Fechar"/>
                </items>
            </Menu>
        </MenuBar>
    </AnchorPane>
</StackPane>
